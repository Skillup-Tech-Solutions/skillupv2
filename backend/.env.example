# Backend Environment Variables Example

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/skillup

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Rate Limiting
LOGIN_RATE_LIMIT_MAX=5

# Email (Mailjet)
from_email=support@skillup.com
ADMIN_EMAIL=admin@skillup.com
EMAIL_PASSWORD=your_mailjet_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Backblaze B2 Storage
B2_BUCKET_NAME=your_bucket_name
keyID=your_b2_key_id
keyName=your_b2_key_name
applicationKey=your_b2_application_key
